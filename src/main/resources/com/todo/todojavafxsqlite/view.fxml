<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.todo.todojavafxsqlite.Controller">
  <children>
    <AnchorPane prefHeight="621.0" prefWidth="655.0">
      <stylesheets>
        <URL value="@style.css" />
      </stylesheets>
      <children>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="655.0" spacing="20.0" style="-fx-background-color: #3A3A3A;">
          <children>
            <Label fx:id="clockLabel" style="-fx-text-fill: white;" text="Clock">
              <font>
                <Font size="18.0" />
              </font>
            </Label>
          </children>
        </HBox>
        <VBox fx:id="vboxAdd" alignment="CENTER" layoutX="85.0" layoutY="55.0" prefHeight="552.0" prefWidth="493.0" spacing="10.0" style="-fx-padding: 20;" visible="false">
          <children>
            <Label fx:id="errorMessage" style="-fx-text-fill: red;" />
            <DatePicker fx:id="inputDate" prefHeight="25.0" style="-fx-focus-color: transparent;" />
            <TextField fx:id="inputDescription" promptText="Skriv en beskrivelse av oppgaven..." style="-fx-focus-color: transparent;" />
            <HBox alignment="CENTER" spacing="20.0">
              <children>
                <VBox alignment="CENTER" spacing="5.0">
                  <children>
                    <Label text="Repetere intervall" />
                    <ChoiceBox fx:id="choiceBox" />
                  </children>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0">
                  <children>
                    <Label text="Hvor mange ganger" />
                    <ChoiceBox fx:id="repeatTimes" />
                  </children>
                </VBox>
              </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addNewTask" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Legg til" />
            <VBox alignment="CENTER" prefHeight="238.0" prefWidth="453.0" spacing="5.0">
              <children>
                <Label text="Eller velg fra historie:" />
                <TableView fx:id="TableViewTaskDone" prefHeight="144.0" prefWidth="433.0">
                  <columns>
                    <TableColumn fx:id="tableDescriptionDone" minWidth="200.0" text="Beskrivelse" />
                    <TableColumn fx:id="tableDateDone" minWidth="120.0" prefWidth="120.0" text="Dato" />
                    <TableColumn fx:id="tableRepeatDone" minWidth="75.0" prefWidth="75.0" text="Repeter" />
                  </columns>
                </TableView>
                <Label text="7 dager vil bli lagt til dags dato." />
              </children>
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                <Button mnemonicParsing="false" onAction="#addFromHistory" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Legg til fra historie" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#closeAddTask" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Avbryt" />
                     </children>
                  </HBox>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </VBox>
        <HBox fx:id="vboxFront" alignment="CENTER" layoutX="24.0" layoutY="112.0" prefHeight="398.0" prefWidth="607.0" spacing="20.0">
          <children>
            <VBox alignment="CENTER" prefHeight="398.0" prefWidth="499.0" spacing="10.0">
              <children>
                <HBox alignment="CENTER" prefHeight="33.0" spacing="10.0">
                  <children>
                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openTask" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Legg til ny task" />
                    <Button mnemonicParsing="false" onAction="#removeTask" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Fjerne task" />
                    <Button mnemonicParsing="false" onAction="#doneTask" style="-fx-background-color: #3A3A3A; -fx-text-fill: white;" text="Ferdig med task" />
                  </children>
                </HBox>
                <TableView fx:id="TableViewTask" prefHeight="200.0">
                  <columns>
                    <TableColumn fx:id="tableDescription" minWidth="280.0" text="Beskrivelse" />
                    <TableColumn fx:id="tableDate" minWidth="120.0" text="Deadline" />
                    <TableColumn fx:id="tableRepeat" prefWidth="75.0" text="Repeter" />
                  </columns>
                </TableView>
              </children>
            </VBox>
          </children>
        </HBox>
            <VBox fx:id="streakPopup" alignment="CENTER" layoutX="49.0" layoutY="139.0" prefHeight="344.0" prefWidth="565.0" spacing="10.0" visible="false">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="71.0" prefWidth="426.0" stylesheets="@style.css" text="Godt jobba!" textAlignment="CENTER">
                     <font>
                        <Font name="Arial Black" size="48.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="streakField" text="number">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Label text=" pÃ¥ rad!">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#closeStreakMessage" text="Bekreft" />
               </children>
            </VBox>
      </children>
    </AnchorPane>
  </children>
</StackPane>
