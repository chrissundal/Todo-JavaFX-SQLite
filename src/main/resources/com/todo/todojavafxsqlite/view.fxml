<StackPane prefHeight="489.0" prefWidth="655.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.todo.todojavafxsqlite.Controller">
  <children>
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="484.0" prefWidth="646.0">
      <children>
        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="646.0" spacing="50.0">
          <children>
            <Label fx:id="clockLabel" text="Clock" />
          </children>
        </HBox>
        <VBox fx:id="vboxAdd" alignment="CENTER" layoutX="167.0" layoutY="-2.0" prefHeight="489.0" spacing="10.0" visible="false">
          <children>
            <Label fx:id="errorMessage" />
            <DatePicker fx:id="inputDate" prefHeight="25.0" />
            <TextField fx:id="inputDescription" text="Skriv en beskrivelse av oppgaven..." />
            <HBox alignment="CENTER" spacing="20.0">
              <children>
                <VBox alignment="CENTER" spacing="5.0">
                  <children>
                    <Label text="Repetere intervall" />
                    <ChoiceBox fx:id="choiceBox" />
                  </children>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0">
                  <children>
                    <Label text="Hvor mange ganger" />
                    <ChoiceBox fx:id="repeatTimes" />
                  </children>
                </VBox>
              </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addNewTask" text="legg til" />
            <VBox alignment="CENTER" prefHeight="220.0" spacing="5.0">
              <children>
                <Label text="Eller velg fra historie:" />
                <TableView fx:id="TableViewTaskDone">
                  <columns>
                    <TableColumn fx:id="tableDescriptionDone" minWidth="170.0" prefWidth="-1.0" resizable="false" text="Beskrivelse" />
                    <TableColumn fx:id="tableDateDone" minWidth="100.0" prefWidth="-1.0" resizable="false" text="Dato" />
                  </columns>
                </TableView>
                <Label text="7 dager vil bli lagt til dags dato." />
                <Button mnemonicParsing="false" onAction="#addFromHistory" text="Legg til fra historie" />
              </children>
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </VBox>
            <Button mnemonicParsing="false" onAction="#closeAddTask" text="Avbryt" />
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </VBox>
        <HBox fx:id="vboxFront" alignment="CENTER" layoutX="20.0" layoutY="57.0" prefHeight="398.0" prefWidth="607.0" spacing="50.0">
          <children>
            <VBox alignment="CENTER" prefHeight="304.0" prefWidth="302.0" spacing="10.0">
              <children>
                <HBox alignment="CENTER" prefHeight="33.0" spacing="10.0">
                  <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openTask" text="Legg til ny task" />
                    <Button mnemonicParsing="false" onAction="#removeTask" text="Fjerne task" />
                    <Button mnemonicParsing="false" onAction="#doneTask" text="Ferdig med task" />
                  </children>
                </HBox>
                <TableView fx:id="TableViewTask" prefHeight="200.0">
                  <columns>
                    <TableColumn fx:id="tableDescription" minWidth="200.0" prefWidth="-1.0" text="Beskrivelse" />
                    <TableColumn fx:id="tableDate" minWidth="100.0" prefWidth="-1.0" text="Deadline" />
                  </columns>
                </TableView>
              </children>
            </VBox>
          </children>
        </HBox>
      </children>
    </AnchorPane>
  </children>
